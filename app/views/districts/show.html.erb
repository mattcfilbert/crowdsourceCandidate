<h2>The fightin' <%= @district.name %> District of Virginia</h2>
<%= image_tag @district.img_url %>
<% if current_user %>
  <h2>Candidates <%= link_to "(+ NEW)", new_district_candidate_path(@district) %></h2>
<% else %>
  <h2>Candidates <%= link_to "(Sign up to run for office!)", new_user_registration_path %></h2>
<% end %>
<div class="all">

  <div class="party">
    <h3>Democrats</h3>
    <ol>
    <% @democrats.each do |candidate| %>
      <div class="candidate">
      <li> <%= link_to candidate.name, district_candidate_path(@district, candidate) %> | Votes: <%= candidate.vote_count %> </li>
      </div>
    <% end %>
    </ol>
  </div>
